<!--pages/RetrievePassword/RetrievePassword.wxml-->
<view class="user">
    <view class="user_left" >
        <text >手机号</text>
    </view>
    <view class="user_right">
        <input  placeholder="请输入手机号" bindinput="phone" />
    </view>
</view>
<view class="user">
    <view class="user_left" >
        <text >验证码</text>
    </view>
    <view class="user_right" style="width: 300rpx;">
        <input placeholder="请输入验证码" style="width: 260rpx;" bindinput="Verification"/>
    </view>
    <view class="user_validate" bindtap="bindButtonTap">{{text}}</view>
</view>
<view class="user">
    <view class="user_left" >
        <text >设置密码</text>
    </view>
    <view class="user_right">
        <input placeholder="请输入8-16位,数字字母组合" type="password" bindinput="Password" />
    </view>
</view>
<view class="user">
    <view class="user_left" >
        <text >确认密码</text>
    </view>
    <view class="user_right">
        <input placeholder="请再次输入密码" type="password"  bindinput="confirmation"/>
    </view>
</view>
<view class="loginBtn" style="margin-top: 70rpx;" bindtap="Confirm">确定</view>
