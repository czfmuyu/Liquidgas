/* 新用户弹窗 */
.show-btn {
    margin-top: 100rpx;
    color: #22cc22;
  }
  
  .modal-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    opacity: 0.5;
    overflow: hidden;
    z-index: 9000;
    color: #fff;
  }
  
  .modal-dialog {
    width: 680rpx;
    overflow: hidden;
    position: fixed;
    top: 50%;
    left: 0;
    z-index: 9999;
    background: #f9f9f9;
    margin: -180rpx 34rpx;
    border-radius: 36rpx;
  }
  .modal-title {
    padding-top: 42rpx;
    font-size: 36rpx;
    color: #030303;
    text-align: center;
  }
  .btn-Photograph,
  .btn-Album{
      width: 680rpx;
      height: 89rpx;
      text-align: center;
      line-height: 89rpx;
      color: #666;
      margin-bottom: 20rpx;
  }
  .btn-Photograph{
    font-size: 46rpx;
    font-weight: 900;
  }
  .btn-Album{
    padding-bottom: 32rpx;
  }
  .modal-ipt{
    padding-bottom: 36rpx;
    color: #c7c7cc;
  }
  .modal-ipt>input{
      width: 477rpx;
      height: 50rpx;
      margin: 0 auto;
      border:2rpx solid;
      padding-left: 10rpx;
      color: #000;
  }
  .modal-footer {
    display: flex;
    flex-direction: row;
    height: 86rpx;
    border-top: 1px solid #dedede;
    font-size: 34rpx;
    line-height: 86rpx;
  }
  
  .btn-cancel {
    width: 50%;
    color: #007aff;
    text-align: center;
    border-right: 1px solid #dedede;
  }
  .btn-confirm {
    width: 50%;
    color: #007aff;
    text-align: center;
  }
  .btn-Number{
    width: 680rpx;
    height: 89rpx;
    text-align: center;
    line-height: 89rpx;
    border-bottom: 2rpx solid;
  }