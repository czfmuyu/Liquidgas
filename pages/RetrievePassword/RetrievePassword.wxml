<!--pages/RetrievePassword/RetrievePassword.wxml-->
<view class="user"style="margin-top: 72rpx;">
    <view class="user_left" >
        <text >手机号</text>
    </view>
    <view class="user_right">
        <input placeholder="请输入手机号" />
    </view>
</view>
<view class="user"style="margin-top: 52rpx;">
    <view class="user_left" >
        <text >验证码</text>
    </view>
    <view class="user_right" style="width: 300rpx;">
        <input placeholder="请输入验证码" style="width: 260rpx;"/>
    </view>
    <view class="user_validate" bindtap="bindButtonTap">{{text}}</view>
</view>
<view class="user"style="margin-top: 52rpx;">
    <view class="user_left" >
        <text >设置密码</text>
    </view>
    <view class="user_right">
        <input placeholder="请输入8-16位,数字字母组合" />
    </view>
</view>
<view class="user"style="margin-top: 52rpx;">
    <view class="user_left" >
        <text >确认密码</text>
    </view>
    <view class="user_right">
        <input placeholder="请再次输入密码" />
    </view>
</view>
<view class="loginBtn" style="margin-top: 70rpx;" bindtap="Confirm">确定</view>
